<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <!-- 圆角 -->
            <corners android:radius="8dp" />

            <!-- 阴影效果 -->
            <solid android:color="@android:color/white" />
            <padding
                    android:left="8dp"
                    android:top="8dp"
                    android:right="8dp"
                    android:bottom="8dp" />
            <stroke
                    android:width="1dp"
                    android:color="#DDDDDD" />
        </shape>
    </item>

    <item>
        <shape>
