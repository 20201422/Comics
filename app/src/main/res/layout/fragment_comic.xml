<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:layout_weight="1"
            android:scaleType="centerCrop" tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toTopOf="@+id/title_view"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp"
            app:riv_corner_radius_bottom_left="13dp"
            app:riv_corner_radius_bottom_right="13dp"
            app:riv_corner_radius_top_left="13dp"
            app:riv_corner_radius_top_right="13dp" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:padding="16dp" tools:ignore="MissingConstraints"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@+id/summary_view" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/image_view" android:layout_marginEnd="24dp"
            android:layout_marginTop="6dp"/>
    <TextView
            android:id="@+id/summary_view"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:padding="16dp" tools:ignore="MissingConstraints"
            android:background="@drawable/border_radius"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@+id/title_view"
            android:layout_marginTop="4dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
